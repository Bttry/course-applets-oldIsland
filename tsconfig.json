// https://www.cnblogs.com/zaihuilou/p/9556373.html
{
  "compilerOptions": {
    // 指定生成哪个模块系统代码
    "module": "commonjs",
    // 编译目标平台
    "target": "es2017",
    // true/false；为 false 时，如果编译器无法根据变量的使用来判断类型时，将用 any 类型代替。为 true 时，进行强类型检查，会报错
    "noImplicitAny": true,
    // 模块的解析
    "moduleResolution": "node",
    // 把 ts 文件编译成 js 文件的时候，同时生成对应的 map 文件
    "sourceMap": true,
    // 重定向输出目录
    "outDir": "dist-server",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "server/types/*"]
    },
    "typeRoots": ["./node_modules/@types", "./typings"],
    "lib": ["es2015", "es2016", "es2017"]
  },
  "include": ["server/**/*"]
}
